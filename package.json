{
  "name": "pthub",
  "displayName": "PT hub",
  "version": "0.0.2",
  "description": "A web extension to manage private trackers",
  "private": true,
  "packageManager": "pnpm@7.8.0",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:bg": "tsup --watch ./src",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:bg",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:bg": "tsup",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "clear": "rimraf extension extension.*",
    "lint": "eslint .",
    "test": "vitest test"
  },
  "devDependencies": {
    "@ant-design/icons-vue": "^6.1.0",
    "@antfu/eslint-config": "^0.27.0",
    "@ffflorian/jszip-cli": "^3.1.6",
    "@iconify/json": "^2.1.155",
    "@intlify/unplugin-vue-i18n": "^0.8.1",
    "@rollup/plugin-replace": "^5.0.1",
    "@types/file-saver": "^2.0.5",
    "@types/file-size": "^1.0.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jquery": "^3.5.14",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.8.3",
    "@types/uuid": "^9.0.0",
    "@types/webextension-polyfill": "^0.9.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@vitejs/plugin-vue": "^3.1.2",
    "@vue/compiler-sfc": "^3.2.40",
    "@vue/test-utils": "^2.1.0",
    "@vueuse/core": "^9.3.0",
    "ant-design-vue": "^3.2.15",
    "axios": "^1.2.1",
    "bencode": "^3.0.0",
    "browserify": "^17.0.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "dayjs": "^1.11.7",
    "eslint": "^8.25.0",
    "esno": "^0.16.3",
    "file-saver": "^2.0.5",
    "file-size": "^1.0.0",
    "fs-extra": "^10.1.0",
    "jquery": "^3.6.3",
    "jsdom": "^20.0.1",
    "jssha": "^3.3.0",
    "kolorist": "^1.6.0",
    "lodash": "^4.17.21",
    "mitt": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "p-queue": "^7.3.0",
    "rimraf": "^3.0.2",
    "tsup": "^6.5.0",
    "typescript": "^4.8.4",
    "unplugin-auto-import": "^0.12.1",
    "unplugin-icons": "^0.14.11",
    "unplugin-vue-components": "^0.22.8",
    "uuid": "^9.0.0",
    "vite": "^3.1.6",
    "vitest": "^0.24.0",
    "vue": "^3.2.40",
    "vue-demi": "^0.13.11",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6",
    "vuex": "^4.1.0",
    "webext-bridge": "^5.0.5",
    "webextension-polyfill": "^0.10.0"
  }
}
